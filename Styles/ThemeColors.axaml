<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =============================================
         Theme-aware Colors for Light and Dark modes
         ============================================= -->

    <ResourceDictionary.ThemeDictionaries>
        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <!-- Background Colors -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="AppSecondaryBackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="AppTertiaryBackgroundBrush" Color="#E8E8E8"/>

            <!-- Sidebar Colors -->
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="SidebarBorderBrush" Color="#E0E0E0"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#323233"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#616161"/>
            <SolidColorBrush x:Key="DisabledTextBrush" Color="#A0A0A0"/>

            <!-- Accent Colors (Blue) -->
            <SolidColorBrush x:Key="AccentBrush" Color="#005FB8"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#006DC4"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="#004A91"/>

            <!-- Status Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#009933"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#A1260D"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#F14C4C"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#005FB8"/>

            <!-- SVN Status Colors -->
            <SolidColorBrush x:Key="ModifiedBrush" Color="#005FB8"/>
            <SolidColorBrush x:Key="AddedBrush" Color="#009933"/>
            <SolidColorBrush x:Key="DeletedBrush" Color="#A1260D"/>
            <SolidColorBrush x:Key="ConflictedBrush" Color="#D9A600"/>
            <SolidColorBrush x:Key="MergedBrush" Color="#8764B8"/>
            <SolidColorBrush x:Key="ReplacedBrush" Color="#8764B8"/>

            <!-- Card Colors -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="CardHoverBrush" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#E0E0E0"/>

            <!-- Input Colors -->
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="InputBorderBrush" Color="#D4D4D4"/>
            <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#005FB8"/>
        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <!-- Background Colors -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="AppSecondaryBackgroundBrush" Color="#252526"/>
            <SolidColorBrush x:Key="AppTertiaryBackgroundBrush" Color="#2D2D2D"/>

            <!-- Sidebar Colors -->
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#252526"/>
            <SolidColorBrush x:Key="SidebarBorderBrush" Color="#3C3C3C"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#9D9D9D"/>
            <SolidColorBrush x:Key="DisabledTextBrush" Color="#5A5A5A"/>

            <!-- Accent Colors (Blue) -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#1C86DB"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="#006CBE"/>

            <!-- Status Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#4EC9B0"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#CE9178"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#F48771"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#75BEFF"/>

            <!-- SVN Status Colors -->
            <SolidColorBrush x:Key="ModifiedBrush" Color="#75BEFF"/>
            <SolidColorBrush x:Key="AddedBrush" Color="#4EC9B0"/>
            <SolidColorBrush x:Key="DeletedBrush" Color="#F48771"/>
            <SolidColorBrush x:Key="ConflictedBrush" Color="#DCDCAA"/>
            <SolidColorBrush x:Key="MergedBrush" Color="#C586C0"/>
            <SolidColorBrush x:Key="ReplacedBrush" Color="#C586C0"/>

            <!-- Card Colors -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="CardHoverBrush" Color="#383838"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#3C3C3C"/>

            <!-- Input Colors -->
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="#3C3C3C"/>
            <SolidColorBrush x:Key="InputBorderBrush" Color="#4A4A4A"/>
            <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#0078D4"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
