<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:converters="using:Svns.Converters"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:i18n="using:Svns.Services.Localization"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="400"
        x:Class="Svns.Views.Dialogs.DeleteDialog"
        x:DataType="vm:DeleteDialogViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Classes="dialog"
        Width="480"
        MinWidth="400"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:DeleteDialogViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <converters:FileTypeToIconConverter x:Key="FileTypeToIconConverter"/>
        <converters:SvnStatusToColorConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF3F3" Padding="16,12" BorderBrush="#FFCDD2" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto,*">
                <material:MaterialIcon Grid.Column="0" Kind="AlertCircle" Width="24" Height="24" Foreground="#D32F2F" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel Grid.Column="1" Spacing="2">
                    <TextBlock Text="{i18n:Localize Delete.Confirm}" FontSize="16" FontWeight="Bold" Foreground="#D32F2F"/>
                    <TextBlock Text="{i18n:Localize Delete.Warning}" FontSize="12" Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Spacing="12" Margin="16,16,16,0">
            <!-- Message -->
            <TextBlock Text="{Binding ConfirmMessage}"
                      FontSize="13"
                      Foreground="#333333"
                      TextWrapping="Wrap"/>

            <!-- File List -->
            <Border Background="#F5F5F5" CornerRadius="6" Padding="0" Margin="0,8,0,0">
                <ScrollViewer MaxHeight="150" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilesToDelete}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,8" MinHeight="36">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Border Grid.Column="0" Background="White" CornerRadius="4" Padding="6,4" Margin="0,0,8,0">
                                            <material:MaterialIcon Kind="{Binding Path, Converter={StaticResource FileTypeToIconConverter}}"
                                                                  Width="16" Height="16"
                                                                  Foreground="#666666"/>
                                        </Border>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding Name}"
                                                  FontSize="13"
                                                  Foreground="#333333"
                                                  VerticalAlignment="Center"
                                                  TextTrimming="CharacterEllipsis"/>
                                        <Border Grid.Column="2"
                                                Background="{Binding WorkingCopyStatus, Converter={StaticResource StatusToColorConverter}}"
                                                Padding="6,2"
                                                CornerRadius="3"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}"
                                                      FontSize="11"
                                                      Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="16,16" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Warning text -->
                <TextBlock Grid.Column="0"
                          Text="{i18n:Localize Delete.Recoverable}"
                          FontSize="11"
                          Foreground="#999999"
                          VerticalAlignment="Center"/>
                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="{i18n:Localize Common.Cancel}"
                            Click="OnCancelClick"
                            Padding="20,8"
                            FontSize="13"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"/>
                    <Button Content="{i18n:Localize Common.Delete}"
                            Click="OnConfirmClick"
                            Padding="20,8"
                            FontSize="13"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
