<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="Svns.Views.Dialogs.BlameDialog"
        x:DataType="vm:BlameViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Blame - Svns"
        Classes="dialog large resizable"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="500"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:BlameViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Classes="dialog-header">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <material:MaterialIcon Kind="AccountEdit" Width="32" Height="32"
                                           Foreground="{DynamicResource AccentBrush}"
                                           VerticalAlignment="Center"/>
                    <StackPanel Spacing="2" VerticalAlignment="Center">
                        <TextBlock Text="Blame (Annotate)" FontSize="20" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding FileName}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="{Binding TotalLines}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="lines" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                    <Border Width="1" Height="16" Background="{DynamicResource SidebarBorderBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="{Binding UniqueRevisions}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="revisions" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                    <Border Width="1" Height="16" Background="{DynamicResource SidebarBorderBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="{Binding UniqueAuthors}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="authors" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,250">
            <!-- Blame Lines -->
            <Border Grid.Column="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    Margin="16,16,8,16"
                    CornerRadius="8"
                    ClipToBounds="True">
                <Grid RowDefinitions="Auto,*">
                    <!-- Column Headers -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource AppSecondaryBackgroundBrush}"
                            Padding="12,8">
                        <Grid ColumnDefinitions="60,80,100,80,*">
                            <TextBlock Grid.Column="0" Text="Line" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="Rev" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Grid.Column="2" Text="Author" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Grid.Column="3" Text="Date" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Grid.Column="4" Text="Content" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Lines List with virtualization -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Lines}"
                             SelectedItem="{Binding SelectedLine}"
                             Background="Transparent"
                             Padding="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="60,80,100,80,*" Height="24">
                                    <!-- Line Number -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding LineNumber}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               VerticalAlignment="Center"
                                               Padding="12,0,8,0"/>

                                    <!-- Revision -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DisplayRevision}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource AccentBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- Author with color indicator -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4"
                                                VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{Binding AuthorColor}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Author}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="80"/>
                                    </StackPanel>

                                    <!-- Date -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding DisplayDate}"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- Content -->
                                    <TextBlock Grid.Column="4"
                                               Text="{Binding Content}"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Padding="8,0,12,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Author Stats Sidebar -->
            <Border Grid.Column="1"
                    Background="{DynamicResource SidebarBackgroundBrush}"
                    BorderBrush="{DynamicResource SidebarBorderBrush}"
                    BorderThickness="1,0,0,0"
                    Margin="8,16,16,16"
                    CornerRadius="8"
                    ClipToBounds="True">
                <Grid RowDefinitions="Auto,*">
                    <!-- Sidebar Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource AppSecondaryBackgroundBrush}"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="AccountGroup" Width="18" Height="18"
                                                   Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="Authors" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Author List -->
                    <ScrollViewer Grid.Row="1" Padding="12">
                        <ItemsControl ItemsSource="{Binding AuthorStats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8"
                                            Background="{DynamicResource CardBackgroundBrush}"
                                            CornerRadius="6"
                                            Margin="0,0,0,8">
                                        <StackPanel Spacing="6">
                                            <!-- Author name and color -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Ellipse Width="10" Height="10" VerticalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="{Binding Color}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Author}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- Stats -->
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryTextBrush}">
                                                    <Run Text="{Binding LineCount}"/>
                                                    <Run Text="lines"/>
                                                </TextBlock>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding DisplayPercentage}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource AccentBrush}"/>
                                            </Grid>

                                            <!-- Progress bar -->
                                            <Border Height="4" CornerRadius="2"
                                                    Background="{DynamicResource SidebarBorderBrush}">
                                                <Border HorizontalAlignment="Left"
                                                        CornerRadius="2">
                                                    <Border.Width>
                                                        <MultiBinding StringFormat="{}{0}%">
                                                            <Binding Path="Percentage"/>
                                                        </MultiBinding>
                                                    </Border.Width>
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding Color}"/>
                                                    </Border.Background>
                                                </Border>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Classes="dialog-footer">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12"
                            IsVisible="{Binding IsLoading}">
                    <ProgressBar Width="80" Height="3" IsIndeterminate="True"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           IsVisible="{Binding !IsLoading}"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding FullPath}"
                           FontSize="11"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="300"
                           Margin="0,0,16,0"/>

                <Button Grid.Column="2"
                        Content="Close"
                        Command="{Binding CloseCommand}"
                        Padding="24,8"/>
            </Grid>
        </Border>
    </Grid>

</Window>
