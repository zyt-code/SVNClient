<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:local="using:Svns.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="Svns.Views.Dialogs.MergeDialog"
        x:DataType="vm:MergeViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Merge - Svns"
        Classes="dialog large"
        Width="600" Height="600"
        MinWidth="500" MinHeight="500"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Classes="dialog-header">
            <StackPanel Spacing="4">
                <TextBlock Text="Merge Changes" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text="Merge changes from another branch into your working copy"
                           FontSize="13"
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24,16">
            <StackPanel Spacing="16">
                <!-- Target (Current Working Copy) -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Target (Working Copy)"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,10">
                        <TextBlock Text="{Binding CurrentUrl}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip.Tip="{Binding CurrentUrl}"/>
                    </Border>
                </StackPanel>

                <!-- Available Sources -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Source Branch"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            MaxHeight="120">
                        <ListBox ItemsSource="{Binding AvailableSources}"
                                 SelectedItem="{Binding SourceUrl}"
                                 Background="Transparent"
                                 Padding="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontSize="13"
                                               Padding="8,4"
                                               TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </StackPanel>

                <!-- Source URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Source URL"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <TextBox Text="{Binding SourceUrl}"
                                 Watermark="Enter source URL..."
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,10"
                                 FontSize="13"/>
                    </Border>
                </StackPanel>

                <!-- Revision Range -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Revision Range"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Grid ColumnDefinitions="*,Auto,*">
                        <Border Grid.Column="0"
                                Background="{DynamicResource InputBackgroundBrush}"
                                BorderBrush="{DynamicResource InputBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <NumericUpDown Value="{Binding RevisionStart}"
                                           Minimum="1"
                                           FormatString="0"
                                           Watermark="Start"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="12,10"
                                           FontSize="13"/>
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Text="to"
                                   Margin="12,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <Border Grid.Column="2"
                                Background="{DynamicResource InputBackgroundBrush}"
                                BorderBrush="{DynamicResource InputBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6">
                            <NumericUpDown Value="{Binding RevisionEnd}"
                                           Minimum="1"
                                           FormatString="0"
                                           Watermark="End"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="12,10"
                                           FontSize="13"/>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Conflict Resolution Strategy -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Conflict Resolution"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="How to handle conflicts during merge"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <ComboBox ItemsSource="{Binding AcceptTypes}"
                                  SelectedItem="{Binding SelectedAcceptType}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="12,10"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={x:Static local:MergeAcceptTypeConverter.Instance}}"
                                               FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <!-- Preview Button -->
                <Button Content="Preview Merge"
                        Command="{Binding PreviewCommand}"
                        IsEnabled="{Binding CanPreview}"
                        HorizontalAlignment="Left"
                        Padding="16,8"/>

                <!-- Preview Result -->
                <StackPanel Spacing="8" IsVisible="{Binding PreviewResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Preview Result"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            MaxHeight="150">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding PreviewResult}"
                                       FontSize="12"
                                       FontFamily="Consolas,Menlo,monospace"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Padding="12,10"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Classes="dialog-footer">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Loading Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8"
                            IsVisible="{Binding IsProcessing}">
                    <ProgressBar Width="60" Height="3" IsIndeterminate="True"/>
                    <TextBlock Text="Processing..." FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Padding="24,8"
                        Margin="0,0,12,0"/>
                <Button Grid.Column="2"
                        Content="Merge"
                        Command="{Binding MergeCommand}"
                        IsEnabled="{Binding CanMerge}"
                        Padding="24,8"
                        Classes="primary"/>
            </Grid>
        </Border>
    </Grid>

</Window>
