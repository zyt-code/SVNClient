<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="Svns.Views.Dialogs.RelocateDialog"
        x:DataType="vm:RelocateViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Relocate Working Copy - Svns"
        Classes="dialog medium"
        Width="500" Height="350"
        MinWidth="400" MinHeight="300"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:RelocateViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Classes="dialog-header">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <material:MaterialIcon Kind="LinkVariant" Width="32" Height="32"
                                       Foreground="{DynamicResource AccentBrush}"
                                       VerticalAlignment="Center"/>
                <StackPanel Spacing="2" VerticalAlignment="Center">
                    <TextBlock Text="Relocate Working Copy" FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="Change the repository URL for this working copy"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24,16">
            <StackPanel Spacing="16">
                <!-- Info Box -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="InformationOutline" Width="18" Height="18"
                                                   Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="About Relocate" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                        <TextBlock Text="Use this when the repository URL has changed (e.g., server moved or renamed). This does not move your files to a different location in the repository."
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Current URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Current Repository URL" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox Text="{Binding CurrentUrl}"
                             IsReadOnly="True"
                             Background="{DynamicResource SidebarBackgroundBrush}"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>

                <!-- New URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="New Repository URL" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox Text="{Binding NewUrl}"
                             Watermark="Enter new repository URL..."
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>

                <!-- Success Message -->
                <Border Background="#10B981"
                        CornerRadius="6"
                        Padding="12"
                        IsVisible="{Binding IsSuccess}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <material:MaterialIcon Kind="CheckCircle" Width="20" Height="20" Foreground="White"/>
                        <TextBlock Text="Working copy relocated successfully!"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Classes="dialog-footer">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12"
                            VerticalAlignment="Center">
                    <ProgressBar Width="80" Height="3" IsIndeterminate="True"
                                 IsVisible="{Binding IsLoading}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Relocate"
                        Command="{Binding RelocateCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Padding="24,8"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Close"
                        Command="{Binding CloseCommand}"
                        Padding="24,8"/>
            </Grid>
        </Border>
    </Grid>

</Window>
