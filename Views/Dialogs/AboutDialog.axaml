<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="560" d:DesignHeight="480"
        x:Class="Svns.Views.Dialogs.AboutDialog"
        x:DataType="vm:AboutViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="About Svns"
        Classes="dialog medium resizable"
        Width="560" Height="480"
        MinWidth="480" MinHeight="400"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:AboutViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header with Logo -->
        <Border Grid.Row="0" Classes="dialog-header"
                Padding="32,24">
            <Grid ColumnDefinitions="Auto,*">
                <!-- App Icon -->
                <Border Grid.Column="0"
                        Width="72" Height="72"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="16"
                        Margin="0,0,20,0">
                    <material:MaterialIcon Kind="SourceRepository" Width="40" Height="40"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                </Border>

                <!-- App Info -->
                <StackPanel Grid.Column="1" Spacing="6" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AppName}" FontSize="24" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="{Binding FullVersion}" FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding Description}" FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               TextWrapping="Wrap"
                               MaxWidth="350"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="32,20">
            <StackPanel Spacing="20">
                <!-- About Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="About" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <TextBlock Text="{Binding Description}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Margin="0,8,0,0">
                            <Run Text="Build Date:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <Run Text="{Binding BuildDate}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Framework:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <Run Text="{Binding DotNetVersion}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="UI Framework:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <Run Text="{Binding AvaloniaVersion}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Statistics Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Project Statistics" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <UniformGrid Columns="2" Margin="0,8,0,0">
                            <!-- Tests -->
                            <Border Background="#E3F2FD"
                                    CornerRadius="8"
                                    Padding="16,12"
                                    Margin="0,0,8,8">
                                <StackPanel Spacing="4">
                                    <material:MaterialIcon Kind="TestTube" Width="24" Height="24"
                                                           Foreground="#1976D2"/>
                                    <TextBlock Text="{Binding TestCount, StringFormat='{}{0}'}"
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="#0D47A1"/>
                                    <TextBlock Text="Unit Tests" FontSize="11"
                                               Foreground="#1976D2"/>
                                </StackPanel>
                            </Border>

                            <!-- SVN Commands -->
                            <Border Background="#E8F5E9"
                                    CornerRadius="8"
                                    Padding="16,12"
                                    Margin="8,0,0,8">
                                <StackPanel Spacing="4">
                                    <material:MaterialIcon Kind="Console" Width="24" Height="24"
                                                           Foreground="#388E3C"/>
                                    <TextBlock Text="{Binding SvnCommandsCount, StringFormat='{}{0}'}"
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="#1B5E20"/>
                                    <TextBlock Text="SVN Commands" FontSize="11"
                                               Foreground="#388E3C"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- License Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="License" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="{Binding License}" FontSize="11"
                                       Foreground="{DynamicResource AccentBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="{Binding LicenseText}"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"/>

                        <TextBlock Margin="0,8,0,0">
                            <Run Text="© " Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <Run Text="{Binding Copyright}" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Links Section -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Links" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <Button Command="{Binding OpenWebsiteCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <material:MaterialIcon Kind="Web" Width="18" Height="18"
                                                       Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="Visit Website"
                                           Foreground="{DynamicResource AccentBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Classes="dialog-footer"
                Padding="32,20">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="Made with ❤️ using Avalonia UI"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Close"
                        Command="{Binding CloseCommand}"
                        Classes="primary"
                        Padding="24,8"/>
            </Grid>
        </Border>
    </Grid>

</Window>
