<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Svns.ViewModels"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="450"
        x:Class="Svns.Views.Dialogs.ImportDialog"
        x:DataType="vm:ImportViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Import - Svns"
        Classes="dialog medium"
        Width="550" Height="450"
        MinWidth="450" MinHeight="400"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:ImportViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Classes="dialog-header">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <material:MaterialIcon Kind="Import" Width="32" Height="32"
                                       Foreground="{DynamicResource AccentBrush}"
                                       VerticalAlignment="Center"/>
                <StackPanel Spacing="2" VerticalAlignment="Center">
                    <TextBlock Text="Import to Repository" FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="Import local files into an SVN repository"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24,16">
            <StackPanel Spacing="16">
                <!-- Info Box -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="InformationOutline" Width="18" Height="18"
                                                   Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="About Import" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                        <TextBlock Text="Import copies an unversioned tree of files into a repository, creating intermediate directories as necessary. This does not create a working copy."
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Local Path -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Local Path" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding LocalPath}"
                                 Watermark="Select folder or file to import..."
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                        <Button Grid.Column="1"
                                Content="Browse..."
                                Command="{Binding BrowseFolderCommand}"
                                Margin="8,0,0,0"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>

                <!-- Repository URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Repository URL" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox Text="{Binding RepositoryUrl}"
                             Watermark="https://svn.example.com/repos/project/trunk"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </StackPanel>

                <!-- Commit Message -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Commit Message" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox Text="{Binding Message}"
                             Watermark="Enter a commit message describing this import..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"/>
                </StackPanel>

                <!-- Options -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Options" FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <CheckBox IsChecked="{Binding NoIgnore}"
                              Content="Include ignored files (--no-ignore)"/>
                </StackPanel>

                <!-- Success Message -->
                <Border Background="#10B981"
                        CornerRadius="6"
                        Padding="12"
                        IsVisible="{Binding IsSuccess}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <material:MaterialIcon Kind="CheckCircle" Width="20" Height="20" Foreground="White"/>
                        <TextBlock Text="Files imported successfully!"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Classes="dialog-footer">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12"
                            VerticalAlignment="Center">
                    <ProgressBar Width="80" Height="3" IsIndeterminate="True"
                                 IsVisible="{Binding IsLoading}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Import"
                        Command="{Binding ImportCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Padding="24,8"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Close"
                        Command="{Binding CloseCommand}"
                        Padding="24,8"/>
            </Grid>
        </Border>
    </Grid>

</Window>
